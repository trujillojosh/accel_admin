<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Batch</th>
      <th>Stage</th>
      <th>End</th>
      <th>Active</th>
      <th>Lead</th>
      <th>Summary</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.batch %></td>
        <td><%= team.stage %></td>
        <td><%= team.end %></td>
        <td><%= team.active %></td>
        <td><%= team.lead %></td>
        <td><%= team.summary %></td>
        <td><%= team.notes %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

